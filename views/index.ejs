<%- layout("../layouts/boilerplate") %>
<body>
    <h1>All listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-xs-1">
        <%for(property of properties){%>
            <a href="/listings/<%= property._id %>">
            <div class="card col" style="width: 20rem;">
                <div class="card text-bg-dark">
                    <img src="<%= property.image.url %>" class="card-img-top" alt="property image">
                    <div class="card-img-overlay">
                    </div>
                </div>
                <div class="card-body">
                    <h5><%= property.title %></h5>
                    <p class="card-text"><%= property.description %></p>
                    <p>&#8377; <%= property.price.toLocaleString("en-IN")%> /Night</p>
                </div>
            </div>
            </a>
        <%}%>
    </div>
    
    
</body>