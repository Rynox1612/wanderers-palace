<%- layout("../layouts/boilerplate") %>
<body>
  <div class="card listing-card col" style="width: 20rem">
    <div class="card card-header border-0 bg-transparent">
      <b class="mt-0"> <%= property.owner.username %></b>
    </div>
    <div class="card listing-card text-bg-dark">
      <img
        src="<%= property.image.url %>"
        class="card-img-top"
        alt="property image"
      />
    </div>
    <div class="card-body">
      <h5><%= property.title %></h5>
      <p><%=property.description%></p>
      <p>&#8377; <%= property.price.toLocaleString("en-IN")%> /Night</p>
    </div>
  </div>
  <% if(currUser && currUser._id.equals(property.owner._id)) {%>
  <form
    action="/listings/<%=property._id%>/edit"
    method="get"
    style="display: inline-block"
  >
    <button class="btn btn-success mx-3">Edit</button>
  </form>
  <form
    action="/listings/<%=property._id%>?_method=DELETE"
    method="post"
    style="display: inline-block"
  >
    <button class="btn btn-danger ms-3">Delete</button>
  </form>
  <% } %> <%- include("../views/includes/review-box.ejs") %>
  <%-include("../views/includes/reviews.ejs") %>
</body>
